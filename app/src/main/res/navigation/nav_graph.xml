<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.search.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_trackActivity2"
            app:destination="@id/trackActivity" />
    </fragment>

    <activity
        android:id="@+id/trackActivity"
        android:name="com.example.playlistmaker.player.ui.activity.TrackActivity"
        android:label="activity_audio_player"
        tools:layout="@layout/activity_audio_player" />

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.playlistmaker.mediateka.ui.fragment.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />


    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.settings.ui.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.playlistmaker.mediateka.ui.fragment.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_trackActivity"
            app:destination="@id/trackActivity" />
    </fragment>

</navigation>
