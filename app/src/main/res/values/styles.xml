<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainScreen" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">@dimen/bottom_indent_the_button_on_screen_main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textFontWeight">@integer/width_500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="android:stateListAnimator">@null</item>"
    </style>

    <style name="textRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">@integer/width_400</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="textTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textFontWeight">@integer/width_500</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsScreenButton" parent="textRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingVertical">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>"
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/YP_blue</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">@color/YP_Light_Gray</item>
    </style>

    <style name="SearchBar">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="titleTextAppearance">@style/textTitle</item>
    </style>

    <style name="subtitleTheTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_size_regular_for_track</item>
        <item name="android:textFontWeight">@integer/width_400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="subtitleTheTrack.titleTheTrack">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">?attr/textColorForTrack</item>
    </style>

    <style name="buttonClear">
        <item name="tint">@color/grey</item>
    </style>

    <style name="SearchScreenButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textFontWeight">@integer/width_500</item>
        <item name="android:textSize">@dimen/text_size_button_update</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="descriptionTrack">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textFontWeight">@integer/width_400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="trackDescriptionValues" parent="descriptionTrack">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>
    
    <style name="ysMedium14">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textFontWeight">@integer/width_400</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">@integer/width_500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>