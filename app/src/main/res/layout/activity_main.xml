<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context=".presentation.main.MainActivity">


    <androidx.appcompat.widget.Toolbar
        style="@style/toolbarStyle"
        app:title="@string/app_name"
        app:titleTextColor="?attr/colorOnSecondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/buttonSearch"
            style="@style/ButtonMainScreen"
            android:text="@string/search"
            app:icon="@drawable/ic_search_light_mode" />

        <Button
            android:id="@+id/buttonLibrary"
            style="@style/ButtonMainScreen"
            android:text="@string/library"
            app:icon="@drawable/ic_library_light_mode" />

        <Button
            android:id="@+id/buttonSettings"
            style="@style/ButtonMainScreen"
            android:text="@string/setting"
            app:icon="@drawable/ic_settings_light_mode" />
    </LinearLayout>

</LinearLayout>